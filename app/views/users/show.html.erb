<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'info', user: @user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
      <%= render 'books/index',books: @books, user: @user %>

    <!--投稿数の前日比・前週比-->
        <!--前日比-->
        <table class="table table-bordered">
          <thead>
            <tr>
              <td colspan="1" class="table-active">今日の投稿数</td>
              <td colspan="1" class="table-active">前日の投稿数</td>
              <td colspan="3" class="table-active">前日比</td>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td><%= @today_book.count %></td>
              <td><%= @yesterday_book.count %></td>
              <td>
               <% if @yesterday_book.count == 0 %>
                前日の投稿はありません
               <% else %>
               　<% @the_day_before =   @today_book.count / @yesterday_book.count.to_f  %>
               　<%= (@the_day_before * 100).round %>
               <% end %>
              </td>
            </tr>
          </tbody>
        </table>
        <!--前週比-->
        <table class="table table-bordered">
          <thead>
            <tr>
              <td colspan="1" class="table-active">今週の投稿数</td>
              <td colspan="1" class="table-active">前週の投稿数</td>
              <td colspan="3" class="table-active">前週比</td>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td><%= @this_week_book.count %></td>
              <td><%= @last_week_book.count %></td>
              <% if @last_week_book.count == 0 %>
              <td>先週の投稿はなし</td>
              <% else %>
                <td><% @the_week_before =   @this_week_book.count / @last_week_book.count.to_f %>
                <%= (@the_week_before * 100).round %>%
                </td>
              <% end %>
            </tr>
          </tbody>
        </table>
    </div>
  </div>
</div>
