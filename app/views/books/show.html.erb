<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: @book.user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @newbook %><!--空のモデルを渡すため@bookから@newbookに変更-->
    </div>
    <div class='col-md-8 offset-md-1'>
      <!--showページの右側-->
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
          <td><%= link_to(@book.user) do %>
            <%= image_tag @book.user.get_profile_image(50,50) %><br>
            <%= @book.user.name %>
            <% end %>
          </td>
          <td><%= link_to @book.title, @book %></td>
          <td><%= @book.body %></td>
          <td><!--いいね機能-->
            <%= render 'favorites/fav', books: @books, book: @book %>
          </td>
          
          <% if @book.user == current_user %>
            <td><%= link_to 'Edit', edit_book_path(@book), class: "btn btn-sm btn-success" %></td>
          <% end %>
          <% if @book.user == current_user %>
            <td><%= link_to 'Destroy', @book, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger" %></td>
          <% end %>
        </tr>
      </table>
      <!--コメント機能-->
      <!--<div class='col-md-8 offset-md-1'>-->
      
      <% @book.post_comments.each do |post_comment| %>
      <!--<div class="form-group">-->
        <table class='table'>
          <tr>
            <td>
            <p><%= image_tag post_comment.user.get_profile_image(50,50) %></p>
            <%= link_to(@book.user) do %>
              <%= post_comment.user.name %>
            <% end %>
            </td>
            <td>
            <%= post_comment.comment %>
            </td>
            <td>
            <% if post_comment.user == current_user %>
              <%= link_to 'Destroy', book_post_comment_path(post_comment.book, post_comment), method: :delete, class: "btn btn-sm btn-danger" %>
            <% end %>
            </td>
          </tr>
        </table>
      <!--</div>-->
      <% end %>
      <!--<div class="form-group">-->
          <%= form_with model: [@book, @post_comment] do |f| %>
            <%= f.text_area :comment, class: 'form-control book_body' %><br>
            <%= f.submit "送信" %>
          <% end %>
      <!--</div>-->
      <!--</div>-->
    </div>
  </div>
</div>