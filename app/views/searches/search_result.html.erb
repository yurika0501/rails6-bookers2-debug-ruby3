<table class="table table-hover table-inverse">
    <!--検索対象モデルがUserの時 -->
    <% if @range == "User" %>
    <h3>Users search for "<%= params[:word] %>"</h3>
      <tbody>
        <thead>
            <tr>
              <th>image</th>
              <th>name</th>
              <th colspan="3"></th>
            </tr>
        </thead>
        <% @users.each do |user| %>
          <tr>
            <td><%= image_tag user.get_profile_image(50,50) %></td>
            <td><%= user.name %></td>
            <td><%= link_to 'Show', user %></td>
          </tr>
        <% end %>
      </tbody>
    <% else %>
      <!--検索対象モデルがUserではない時(= 検索対象モデルがBookの時) -->
      <h3>Books search for "<%= params[:word] %>"</h3>
      <tbody>
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>
        <% @books.each do |book| %>
          <tr>
            <td><%= image_tag book.user.get_profile_image(50,50) %></td>
            <td><%= link_to book.title,book %></td>
            <td><%= book.body %></td>
          </tr>
        <% end %>
      </tbody>
    <% end %>
</table>
