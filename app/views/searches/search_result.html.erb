<h2>Books search for "<%= params[:search] %>"</h2>

<table class="table table-hover table-inverse">
    <!--検索対象モデルがUserの時 -->
    <% if @range == "User" %>
      <tbody>
        <thead>
            <tr>
              <th>image</th>
              <th>name</th>
              <th colspan="3"></th>
            </tr>
        </thead>
        <% @users.each do |user| %>
          <tr>
            <td><%= image_tag user.get_profile_image(50,50) %></td>
            <td><%= user.name %></td>
            <td>フォロー数:<%= link_to user.followings.count, followings_user_path(user) %></td>
            <td>フォロワー数:<%= link_to user.followers.count, followers_user_path(user) %></td>
            <td>
              <% if user == current_user %>
              <% else %>
                <% if user.is_followed_by?(current_user) %>
                  <%=link_to user_relationships_path(user), method: :delete do %>
                    <button type="button" class="btn btn btn-danger">フォロー外す</button>
                  <% end %>
                <% else %>
                  <%=link_to user_relationships_path(user), method: :post do %>
                    <button type="button" class="btn btn btn-primary">フォローする</button>
                  <% end %>
                <% end %>
              <% end %>
            </td>
            <td><%= link_to 'Show', user %></td>
          </tr>
        <% end %>
      </tbody>
    <% else %>
      <!--検索対象モデルがUserではない時(= 検索対象モデルがBookの時) -->
      <tbody>
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>
        <% @books.each do |book| %>
          <tr>
            <td><%= image_tag book.user.get_profile_image(50,50) %></td>
            <td><%= link_to book.title,book %></td>
            <td><%= book.body %></td>
          </tr>
        <% end %>
      </tbody>
    <% end %>
</table>
